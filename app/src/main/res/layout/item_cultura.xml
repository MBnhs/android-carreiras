<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageCultura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        />
    
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criatividade"
        android:textAllCaps="true"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="@id/imageCultura"
        app:layout_constraintEnd_toEndOf="@id/imageCultura"
        app:layout_constraintTop_toBottomOf="@id/imageCultura"
        />

    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"

        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/imageCultura"
        app:layout_constraintStart_toStartOf="@id/imageCultura"
        app:layout_constraintTop_toBottomOf="@id/textTitulo" />

</android.support.constraint.ConstraintLayout>